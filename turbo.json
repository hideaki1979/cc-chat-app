{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": ["BACKEND_INTERNAL_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["BACKEND_INTERNAL_URL"]
    },
    "build:styles": {
      "inputs": ["src/**/*.css", "src/**/*.tsx"],
      "outputs": ["dist/**"]
    },
    "dev:styles": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["BACKEND_INTERNAL_URL"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["BACKEND_INTERNAL_URL"]
    }
  }
}
